<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/rootLayout"
    tools:context="com.example.haipham.uberandroid.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="U B E R"
            android:textSize="36sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_rider_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/bottomtext"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="LOOKING FOR THE RIDER APP"/>
    <LinearLayout
        android:layout_above="@id/txt_rider_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_sign_in"
            android:layout_weight="1"
            android:text="SIGN IN"
            android:layout_marginRight="6dp"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_register"
            android:layout_weight="1"
            android:text="REGISTER"
            android:layout_marginLeft="6dp"
            android:textColor="@color/btn_Register"/>
    </LinearLayout>

</RelativeLayout>
